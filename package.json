{
  "name": "mern-server-template",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "module": "ts-node src/utils/module-generator.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "keywords": [
    "mern",
    "server",
    "typescript",
    "express",
    "mongoose"
  ],
  "author": "Polash Ahmed",
  "license": "ISC",
  "description": "A template for a MERN stack server using TypeScript, Express, and Mongoose.",
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "mongoose": "^8.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
